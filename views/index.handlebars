<div class="col-xs-12 col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>Devour a Burger</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <tbody>
                {{#each burgers}}
                {{#unless devoured}}
                    <tr>
                        <td><h4>{{id}}</h4></td>
                        <td><h4>{{burger_name}}</h4></td>
                        <td><button class="btn btn-primary devour" data-state="0" data-id="{{id}}">Devour!</button></td>
                    </tr>
                {{/unless}}
                {{/each}}
                </tbody>
            </table>
            <div class="panel panel-primary">
                <div class="panel-body" style="background-color: #2b3e50">
                    <hr>
                    <h4>Request a Burger</h4>
                    <hr>
                    <div class="form-group" id="frmAdd">
                        <label for="add">Burger Name:</label>
                        <input type="text" class="form-control" id="txtAdd" name="add">
                    </div>
                    <button class="btn btn-primary btn-block" id="addBurger">Add Burger</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-xs-12 col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>Devoured Burgers</h3> 
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <tbody>
                    {{#each burgers}}
                    {{#if devoured}}
                    <tr>
                        <td><h4>{{id}}</h4></td>
                        <td><h4>{{burger_name}}</h4></td>
                        <td><button class="btn btn-primary devour" data-state="1" data-id="{{id}}">Reset!</button></td>
                    </tr>
                    {{/if}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
   
</div>
